= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, autofocus: true, input_html: { class: "span12" }
    = f.input :email, input_html: { class: "span12" }
    = f.input :password, input_html: { class: "span12" }
    = f.input :password_confirmation, input_html: { class: "span12" }
  = f.button :submit, "Sign up and start a blog pact now", class: "btn btn-success btn-main"